.nav-scroll{
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  margin-bottom: 4rpx;
  white-space: nowrap;
  background: #fff;
  z-index: 2;
}
.nav-item{
  display: inline-block;
  color: #666;
  font-size: 30rpx;
  padding: 6rpx 0 10rpx;
  margin: 0 25rpx; 
}
.info{
  padding-top: 64rpx;
}
.swiper-nav{
  display: inline-block;
  width: 100%;
  height: 100%;
}
.slide-image{
  width: 100%;
  height: 100%;
}
.active{
  color: #f90500;
  border-bottom: 6rpx solid #f90500;
}
.activity{
  height: 180rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.act-item{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.act-item image{
  width: 50rpx;
  height: 50rpx;
}
.act-item .icon{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: #cc8a40;
  display: flex;
  justify-content: center;
  align-items: center;
}
.act-item .txt{
  color: #666;
  font-size: 26rpx;
  margin-top: 10rpx; 
}