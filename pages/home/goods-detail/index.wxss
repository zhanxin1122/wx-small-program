/* pages/home/goods-detail/index.wxss */
.view-box{
  padding-bottom: 100rpx;
}
/* 轮播图 */
.head-nav{
  height: 500rpx;
}
.swiper-nav{
  width: 100%;
  height: 100%;
}
.slide-image{
  width: 100%;
  height: 100%;
}
/* 商品信息  价格-标题。。。 */
.goods-info{
  padding: 20rpx 20rpx 10rpx 15rpx;
  overflow: hidden;
}
.goods-info .info{
  width: 89%;
  float: left;
}
.goods-info .title{
  color: #000;
  font-size: 36rpx;
}
.goods-info .price{
  color: red;
  display: inline-block;
}
.goods-info .y-price{
  color: #000;
  font-size: 26rpx;
  display: inline-block;
  margin-left: 20rpx;
  text-decoration: line-through;
}
.goods-info .shuo{
  float: right;
  color: #000;
  font-size: 28rpx;
  margin-top: 10rpx;
}
.goods-info .op{
  width: 8%;
  position: relative;
  float: left;
  margin-left: 3%;
  color: #666;
  font-size: 28rpx;
}
.goods-info .op:before{
  content: ' ';
  position: absolute;
  left: -14rpx;
  top: 10rpx;
  height: 80rpx;
  border-left: 3rpx solid #eee;
}
.goods-info .op image{
  width: 60rpx;
  height: 60rpx;
}
/* 规格选择，地址 */
.gg-select{
  position: relative;
  display: flex;
  height: 80rpx;
  align-items: center;
  margin-left: 20rpx;
  border-bottom: 2rpx solid #eee;
  color:#333;
  font-size:30rpx;
}
.gg-info{
  margin-left: 20rpx;
  color:#000;
  font-size:34rpx;
}
.gg-op{
  position: absolute;
  right: 0;
  bottom: 0;
  height:100%;
  display:flex;
  align-items:center;
  padding-right:20rpx;
}
.gg-detail{
  padding: 30rpx 20rpx 10rpx  ;
  color: #999;
  font-size: 28rpx;
  display: flex;
  align-items: flex-start;
}
.gg-detail-title{
  height: 70rpx;
  line-height: 70rpx;
  white-space: nowrap;
}
.gg-detail-item{
  display: inline-block;
  height: 70rpx;
  line-height: 70rpx;
  padding: 0 25rpx;
  font-size: 34rpx;
  border-radius: 10rpx;
  background: #eee;
  color: #000;
  margin-left: 20rpx;
  margin-bottom: 20rpx;
}
.gg-detail-item.active{
  background: #e93b3d;
  color: #fff;
}
.gg-num{
  color: #999;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  padding-left: 20rpx;
  padding-bottom: 30rpx;
}
.gg-num-op{
  height: 70rpx;
  border: 2rpx solid #e5e5e5;
  border-radius: 10rpx;
  width: 210rpx;
  display: flex;
  align-items: center;
  margin-left: 20rpx;
  padding: 0 15rpx;
}
.gg-num-op .sub{
  font-weight: bold;
  font-size: 26rpx;
  color: #999;
}
.gg-num-op input{
  display: inline-block;
  height: 100%;
  text-align: center;
  border-left: 2rpx solid #e5e5e5;
  border-right: 2rpx solid #e5e5e5;
  color: #333;
  font-size: 30rpx;
  margin: 0 15rpx;
}
.gg-num-op .add{
  font-weight: bold;
  font-size: 50rpx;
  color: #666;
}
.pos-box{
  height: 80rpx;
  font-size: 26rpx;
  color: #999;
  border-bottom: 2rpx solid #eee;
  margin: 0 20rpx;
}
.pos-box image{
  width: 40rpx;
  height: 40rpx;
  margin-left: 20rpx;
}
.pos-info{
  font-size: 30rpx;
  color: #000;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  margin-right: 20rpx; 
  width: 550rpx;
}
.pos-title{
  width: 60rpx;
  white-space: nowrap;
}
.arrow-r{
  top: 3rpx;
}
/* 店铺信息 */
.shyh-detail{
  width: 500rpx;
}
.jz,
.dui{
