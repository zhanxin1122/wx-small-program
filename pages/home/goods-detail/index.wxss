}
.dp-box{
  margin: 15rpx 20rpx 10rpx;
}
.dp-detail{
  display: flex;
  align-items: center;
}
.dp-detail image{
  display: inline-block;
  height: 60rpx;
  width: 200rpx;
}
.dp-name-info{
  height: 60rpx;
  display: inline-block;
  margin-left: 15rpx; 
}
.dp-name{
  font-size: 30rpx;
  color: #000;
}
.dp-info{
  font-size: 20rpx;
  color: #999;
}
.jdkk{
  font-size: 30rpx;
  color: #666;
}
.dp-pj{
  height: 60rpx;
  border-bottom: 2rpx solid #eee;
  font-size: 24rpx;
}
.pj-bfb{
  padding: 0 10rpx;
}
.pj-num{
  color: #999;
}
.ckqbpj{
  margin: 15rpx 20rpx;
  border: 2rpx solid #ccc;
  border-radius: 10rpx;
  color: #666;
  text-align: center;
  padding: 20rpx 0;
  font-size: 30rpx;
}
/* 评价 */
.pj-list{
  padding: 20rpx 0;
  margin: 0 20rpx;
  border-bottom: 2rpx solid #eee;
}
.pj-list:last-child{
  border: 0;
}
.user-info{
  position: relative;
  display: flex;
  align-items: flex-start;
}
.user-info image{
  display: inline-block;
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%; 
}
.user-name{
  display: inline-block;
  color: #333;
  font-size: 24rpx;
  height: 50rpx;
  line-height: 50rpx;
  margin-left: 20rpx;
}
.user-eval{
  position: absolute;
  right: 0;
  top: 0;
  height: 50rpx;
  width: 200rpx;
  float: right;
}
.user-desc{
  color: #333;
  font-size: 28rpx;
  margin-top: 20rpx;
}
.user-media-box{
  display: flex;
  flex-wrap: wrap;
  margin: 20rpx 0;
}
.user-media{
  width: 23%;
  height: 150rpx;
  margin-right: 7rpx;
}
.user-v,
.user-i{
  width: 100%;
  height: 100%;
}
.user-gg{
  color: #999;
  font-size: 28rpx;
}
/*店铺推荐*/
.dptj-title{
  padding-left: 20rpx;
  color: #000;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
}
.dptj-list{
  display: flex;
  justify-content: space-between;
  padding: 0 20rpx 20rpx;
}
.dptj-list-item{
  box-sizing: border-box;
  border: 4rpx solid #eee;
  border-radius: 6rpx;
  width: 33%;
}
.dptj-list-item image{
  width: 100%;
  height: 220rpx;
}
.dptj-list-desc{
  max-height: 50rpx;
  color: #333;
  font-size: 24rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  padding: 0 10rpx 10rpx;
}
.dptj-list-price{
  color: #ff272a;
  font-weight: bold;
  font-size: 26rpx;
  padding: 10rpx 0 10rpx 10rpx;
}
.spxq-title{
  padding-left: 20rpx;
  color: #000;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 34rpx;
}
.spxq-list{
  height: 500rpx;
}
.spxq-list image{
  width: 100%;
  height: 100%;
}
/* 底部操作导航 */
.foot-list{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 80rpx;
  background: #fff;
}
.foot-icon{
  position: relative;
  float: left;
  width:14%;
  height: 100%;
  font-size: 22rpx;
  color: #666;
}
.foot-icon image{
  width: 45rpx;
  height: 45rpx;
}
.foot-op{
  float: left;
  text-align: center;
  line-height: 80rpx;
  color: #fff;
  font-size: 34rpx;
  width: 29%;
}
.goods-num{
  position: absolute;
  top: 2rpx;
  right: 20rpx;
  width: 30rpx;
  height: 30rpx;
  text-align: center;
  line-height: 30rpx;
  color: #fff;
  border-radius: 50%;
  font-size: 22rpx;
  background: #ff272a;
}
.op-gwc{
  background: #ff8d00;
}
.op-ljgm{
