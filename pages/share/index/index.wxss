.nav{
  position: fixed;
  left:0;
  top: 0;
  width: 100%;
  height: 80rpx;
  background: #f7fcf9;
  z-index: 2;
}
.nav-item{
  width: 33.33%;
  height: 100%;
  display: inline-block;
  text-align: center;
}
.nav-item .text{
  height: 75rpx;
  color: #666;
  display: inline-block;
  font-size: 32rpx;
  line-height: 80rpx;
}
.nav-item .active{
  color: #ff8600;
  border-bottom: 6rpx solid #ff8600;
}
.content{
  margin-top: 80rpx; 
}