/**app.wxss**/
.flex-horizontal{
  display: flex;
  justify-content: center;
  align-items: center;
}
.flex-vertical{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.flex-between{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.ellipsis{
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.overhd{
  overflow: hidden;
}
.arrow{
  width: 15rpx;
  height: 15rpx;
  border-right: 4rpx solid #666;
  border-bottom: 4rpx solid #666;
  transform: rotate(-45deg);
  position: relative;
  top: 12rpx;
}
.mg0{
  margin: 0!important;
}
.line-bg{
  height: 17rpx;
  background: #f2f2f2;
}
.arrow-t{
  position: relative;
  top: 5rpx;
  display: inline-block;
  width: 20rpx;
  height: 20rpx;
  border-left: 4rpx solid #ccc;
  border-top: 4rpx solid #ccc;
  transform: rotate(45deg);
}
.arrow-b{
  position: relative;
  bottom: 5rpx;
  display: inline-block;
  width: 20rpx;
  height: 20rpx;
  border-right: 4rpx solid #ccc;
  border-bottom: 4rpx solid #ccc;
  transform: rotate(45deg);
}
.arrow-r{
  position: relative;
  right: 5rpx;
  display: inline-block;
  width: 20rpx;
  height: 20rpx;
  border-top: 4rpx solid #ccc;
  border-right: 4rpx solid #ccc;
  transform: rotate(45deg);
}
.red{
  color: #e93b3d;
}
.select{
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid #ccc;
  border-radius: 50%;
  margin-right: 20rpx;
}
.selected{
  width: 46rpx;
  height: 46rpx;
  background-image: url(data:image/png;base64,);
  background-size: cover;
  border: 0;
}