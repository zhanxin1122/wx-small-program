/* components/select-list/index.wxss */
.title{
  height: 100rpx;
  border-bottom: 2rpx solid #e5e5e5;
  margin-left: 20rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}
.select{
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid #ccc;
  border-radius: 50%;
}
.selected{
  width: 44rpx;
  height: 44rpx;
  background-image: url(data:image/png;base64,);
  background-size: cover;
  border: 0;
}