/* components/more-loading/index.wxss */
.more-loading{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.more-loading image{
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
  animation: rotate 1s infinite linear;
}
.more-loading .text{
  margin-top: 10rpx; 
  font-size: 30rpx;
  color: #999;
}
@keyframes rotate{
  from{
    transform: rotate(0);
  }
  to{
    transform: rotate(360deg);
  }
}
